<Project>
  <!-- general build properties -->
  <PropertyGroup>
    <TargetFrameworks>net8.0</TargetFrameworks>
    <UseArtifactsOutput>true</UseArtifactsOutput>
    <PackageId>Basilisque.$(MSBuildProjectName)</PackageId>
  </PropertyGroup>
  
  <!-- NuGet package properties and project info -->
  <PropertyGroup>
    <BAS_CB_Copyright_BeginYear>2025</BAS_CB_Copyright_BeginYear>
    <PackageProjectUrl>https://github.com/basilisque-framework/DataAccess</PackageProjectUrl>
    <PackageTags>DataAccess Data Access EF Entity Framework EntityFramework CSharp</PackageTags>
    <!--<PackageIconUrl>http://www.url.de/nuget_icon.png</PackageIconUrl>-->
    <PackageReadmeFile>docs\README.md</PackageReadmeFile>
  </PropertyGroup>

  <!-- common build configuration for non-test projects -->
  <ItemGroup Condition="$(MSBuildProjectName.EndsWith('.Tests')) != 'true'">
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleToAttribute">
      <_Parameter1>$(MSBuildProjectName).Unit.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>
  
  <!-- common build configuration for unit test projects -->
  <ItemGroup Condition="$(MSBuildProjectName.EndsWith('.Unit.Tests'))">
    <ProjectReference Include="..\$(MSBuildProjectName.Replace('.Unit.Tests', ''))\$(MSBuildProjectName.Replace('.Unit.Tests', '')).csproj" />

    <PackageReference Include="NSubstitute" />

    <Using Include="NSubstitute"/>
  </ItemGroup>
</Project>